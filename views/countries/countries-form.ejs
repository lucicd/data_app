<%- include('../head') %>
<body>
  <div class="container">
    <h1><%= title %></h1>
  </div>
  <div class="container">
    <form action="/countries" method="post">
      <input type="hidden" name="id" value="<%= rec.id %>">
      <input type="hidden" name="_method" value="<%= rec._method %>">
      <div class="form-group">
        <label for="code">Code</label>
        <input 
          type="text"
          name="code"
          id="codeInput"
          class="form-control"
          placeholder="Country code"
          required
          autofocus
          maxlength="2"
          size="2"
          <% if (rec.code) { %>
            value="<%= rec.code %>"
          <% } %>
        >
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input 
          type="text"
          name="name"
          id="nameInput"
          class="form-control"
          placeholder="Country name"
          required
          maxlength="255"
          <% if (rec.name) { %>
            value="<%= rec.name %>"
          <% } %>
        >
      </div>
      <input type="submit" id="submitBtn" class="btn btn-default">
    </form>
  </div>
</body>
<%- include('../footer') %>